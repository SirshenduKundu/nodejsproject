<%- include('../Includes/header.ejs') %>
    <link rel="stylesheet" type="text/css" href="/CSS/login.css">
    </head>

    <body>
        <%- include('../Includes/nav.ejs') %> 

            <div class="container">
                <div class="d-flex justify-content-center h-100">
                    <div class="card">
                        <div class="card-header">
                           <center> <h3>Login Here</h3></center>

                        </div>
                        <div class="avatar">
                            <img src="https://thumbs.dreamstime.com/b/vectorial-blank-face-avatar-7046081.jpg" height="50px" width="50px">
                          </div>
                        <div class="card-body">
                            <form method="POST" action="/postlogin">
                                <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input class="form-control" type="email" name="emailid" value="<% if(cookie_data.cookiedata){%> <%=cookie_data.cookiedata.emailcookie%> <%}%>" placeholder="Enter EmailId">

                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input class="form-control" type="password" name="password"
                                        placeholder="Enter password">
                                </div>
                                <% if(errMsg){%>
                                   <center><h6 style="color: red;"><%= errMsg%></h6></center>
                               <% }%>
                                
                                <div class="row align-items-center remember">
                                    <input name="checkbox" type="checkbox">Remember Me
                                </div>
                              <center> <div class="form-group">
                            <input type="submit" value="Login" class="btn float-right login_btn">
                        </div></center>
                      
                        
                            </form>


                        </div>


                        <div class="card-footer">
                            <div class="d-flex justify-content-center links">
                              <h6>  Don't have an account?<a href="/reg">Sign Up Here</a></h6>
                            </div>
                            <div class="d-flex justify-content-center">
                                <a href="#">Forgot your password?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
 <%- include('../Includes/footer.ejs') %>